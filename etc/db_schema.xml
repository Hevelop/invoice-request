<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="quote">
        <column xsi:type="smallint" name="ec_want_invoice" nullable="false" comment="Want Invoice"/>
    </table>
    <table name="sales_order">
        <column xsi:type="smallint" name="ec_want_invoice" nullable="false" comment="Want Invoice"/>
        <column xsi:type="varchar" name="ec_invoice_type" nullable="false" comment="Invoice Type"/>
    </table>
    <table name="sales_order_grid">
        <column xsi:type="smallint" name="ec_want_invoice" nullable="false" comment="Want Invoice"/>
        <column xsi:type="varchar" name="ec_invoice_type" nullable="false" comment="Invoice Type"/>
    </table>
    <table name="quote_address">
        <column xsi:type="varchar" name="sdi_code" comment="Codice destinatario (SDI)"/>
    </table>
    <table name="sales_order_address">
        <column xsi:type="varchar" name="sdi_code" comment="Codice destinatario (SDI)"/>
    </table>
    <table name="customer_address_entity">
        <column xsi:type="varchar" name="sdi_code" comment="Codice destinatario (SDI)"/>
    </table>
</schema>
